
<%= display_header_for_new %>

<%= render partial: 'layouts/errors', locals: {object: @review} %>

<%= form_for @review do |f| %>
  <%= hidden_book %>
  
  <br> 

  <div>
    <%= f.label :review %> <br>
    <%= f.text_area :content %>
  </div>

  <br> 

  <div>
    <%= f.label :rating %>
    <%= f.number_field :rating, min: 0, max: 5 %>
  </div>

  <br> 

  <%= f.submit %>

<% end %>