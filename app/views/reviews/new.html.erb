<h2> Write a review </h2>

<% if @review.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

    <ul>
      <% @review.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if @book %>
  <h2> Reviewing: <%= @book.title_and_author %></h2>
<% end %>

<%= form_for @review do |f| %>

  <div>
    <% if @book %>
      <%= f.hidden_field :book_id %>
    <% else %>
      <%= f.label "Select book to review" %> 
      <%= f.collection_select :book_id, Book.all, :id, :title_and_author, include_blank: "Select A Book" %>
    <% end %>
  </div>

  <br>

  <div>
    <%= f.label :review %> <br>
    <%= f.text_area :content %>
  </div>

  <br> 

  <div>
    <%= f.label :rating %>
    <%= f.number_field :rating, min: 0, max: 5 %>
  </div>

  <br>

  <%# change to dropdown if no id %>

  <%= f.submit %>

<% end %>